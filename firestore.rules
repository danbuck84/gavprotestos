rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.uid == '76561197991580442' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super-admin']
      );
    }

    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuth();
      // Allow users to update their own profile (e.g. displayName), allow admins to update roles
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Protests Collection
    match /protests/{protestId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update, delete: if isAdmin();
    }

    // Races Collection
    match /races/{raceId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
